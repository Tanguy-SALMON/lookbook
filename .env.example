# Lookbook-MPC Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
# MySQL connection for Magento shop data (read-only)
# Format: mysql+pymysql://user:password@host:port/database
MYSQL_SHOP_URL=mysql+pymysql://lookbook_user:lookbook_password@localhost:3306/magento

# Lookbook database (SQLite by default, switchable to MySQL/PostgreSQL)
# SQLite: sqlite:///lookbook.db
# MySQL: mysql+pymysql://user:password@host:port/database
# PostgreSQL: postgresql://user:password@host:port/database
LOOKBOOK_DB_URL=sqlite:///lookbook.db

# Ollama Configuration
# Ollama daemon host and port
OLLAMA_HOST=http://localhost:11434

# Vision model for image analysis
# Recommended: qwen2.5-vl:7b
OLLAMA_VISION_MODEL=qwen2.5-vl:7b

# Text model for intent parsing and rationale generation
# Recommended: qwen3
OLLAMA_TEXT_MODEL=qwen3

# S3 Configuration
# Base URL for product images
# Format: https://your-bucket.s3.amazonaws.com/
S3_BASE_URL=https://your-s3-bucket.s3.amazonaws.com/

# Application Configuration
# Timezone
TZ=UTC

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# CORS Configuration (for development)
# Comma-separated list of allowed origins
# Use * for development, specify domains for production
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# API Configuration
# API base path
API_PREFIX=/v1

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Vision Analysis Configuration
# Maximum image size for processing (pixels)
MAX_IMAGE_SIZE=200

# Vision analysis timeout in seconds
VISION_TIMEOUT=40

# Intent Parsing Configuration
# Intent parsing timeout in seconds
INTENT_TIMEOUT=30

# Recommendation Configuration
# Maximum number of outfits to return
MAX_OUTFITS=7

# Maximum number of items per outfit
MAX_ITEMS_PER_OUTFIT=5

# Caching Configuration
# Enable caching for LLM responses
ENABLE_CACHING=true

# Cache TTL in seconds
CACHE_TTL=3600

# Security Configuration
# Secret key for JWT tokens (if implementing auth)
SECRET_KEY=your-secret-key-here

# API Key for external services (if needed)
API_KEY=your-api-key-here

# Development Configuration
# Enable auto-reload in development
DEV_RELOAD=true

# Enable debug mode
DEBUG=false

# Testing Configuration
# Test database URL (separate from production)
TEST_DB_URL=sqlite:///test_lookbook.db

# Test Ollama host (can be different from production)
TEST_OLLAMA_HOST=http://localhost:11434