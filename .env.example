# Lookbook-MPC Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
LOOKBOOK_DB_URL=sqlite:///lookbook.db
MYSQL_SHOP_URL=mysql+pymysql://user:password@localhost:3306/magento_db

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_VISION_MODEL=qwen2.5-vl:7b
OLLAMA_TEXT_MODEL=qwen3

# S3 Configuration
S3_BASE_URL=https://your-s3-bucket.s3.amazonaws.com

# Application Configuration
TZ=UTC
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Security Configuration
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here

# Vision Sidecar Configuration
VISION_SIDECAR_HOST=http://localhost:8001
VISION_SIDECAR_TIMEOUT=30
VISION_SIDECAR_MAX_RETRIES=3

# Intent Parser Configuration
INTENT_PARSER_TIMEOUT=10
INTENT_PARSER_MAX_TOKENS=1000

# Recommender Configuration
RECOMMENDER_MAX_OUTFITS=7
RECOMMENDER_MAX_ITEMS_PER_OUTFIT=10
RECOMMENDER_MIN_MATCH_SCORE=0.3

# MCP Configuration
MCP_HOST=0.0.0.0
MCP_PORT=8002
MCP_TIMEOUT=30